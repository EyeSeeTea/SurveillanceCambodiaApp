<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@drawable/background_header"
    android:padding="@dimen/dashboard_row_padding"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <include layout="@layout/top_view"></include>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
        <org.eyeseetea.malariacare.views.TextCard
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/assessment_past_cases"
            android:id="@+id/idHeader"
            android:background="@drawable/background_header"
            android:textColor="@color/fragment_header_title"
            android:gravity="center"
            android:padding="5dip"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/condensed_font_name"/>
            <!--android:textSize="@dimen/dashboard_text_size"-->
        <View
            android:layout_width="3dip"
            android:layout_height="match_parent"
            android:background="@color/dark_violet"
            android:layout_marginTop="10dp"/>

        <org.eyeseetea.malariacare.views.TextCard
            android:id="@+id/assessment_connectivity"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/assessment_connectivity"
            android:background="@drawable/background_header"
            android:textColor="@color/fragment_header_subtitle"
            android:gravity="center"
            android:padding="5dip"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:autoText="false"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/condensed_font_name"/>
            <!--android:textSize="@dimen/dashboard_text_size"-->
    </LinearLayout>

    </LinearLayout>
</TableRow>